<body>
  <h2>Match the Shapes!</h2>
  <div style="display: flex; justify-content: flex-start; align-items: flex-start; gap: 80px;">
    <div style="display: grid; grid-template-rows: repeat(5, 1fr); gap: 48px; align-items: center; min-height: 440px; margin-left: 40px; margin-right: 80px; width: 120px;">
      <div id="circle" class="draggable" draggable="true"></div>
      <div id="square" class="draggable" draggable="true"></div>
      <div id="triangle" class="draggable" draggable="true"></div>
      <div id="star" class="draggable" draggable="true"></div>
      <div id="heart" class="draggable" draggable="true"></div>
    </div>
    <div style="display: grid; grid-template-rows: repeat(5, 1fr); gap: 48px; align-items: center; min-height: 440px; margin-left: 80px; width: 120px;">
      <div id="drop-star" class="dropzone"><span>Star</span></div>
      <div id="drop-square" class="dropzone"><span>Square</span></div>
      <div id="drop-heart" class="dropzone"><span>Heart</span></div>
      <div id="drop-triangle" class="dropzone"><span>Triangle</span></div>
      <div id="drop-circle" class="dropzone"><span>Circle</span></div>
    </div>
    <div style="display: flex; flex-direction: column; gap: 24px; align-items: flex-start; margin-left: 40px;">
      <div id="score" style="font-size:28px; color:#1976d2; font-weight:bold; background:#e3f2fd; border-radius:12px; padding:12px 24px; box-shadow:0 2px 8px #90caf9; margin-top:24px;">Score: 0</div>
      <div id="instruction" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 8px #90caf9; padding: 16px 24px; margin-top: 18px; font-size: 20px; color: #1976d2; font-weight: bold;">Instructions: Drag and match the following shapes in their correct boxes to receive 5 points each!</div>
    </div>
  </div>
  <div id="result" style="font-size:24px; color:rgb(6, 159, 60); margin-top:20px;"></div>
  <script>
    const correct = {
      "drop-circle": "circle",
      "drop-square": "square",
      "drop-triangle": "triangle",
      "drop-star": "star",
      "drop-heart": "heart"
    };
    let score = 0;
    let matched = {};
    function updateScore() {
      document.getElementById("score").textContent = "Score: " + score;
    }
    document.querySelectorAll('.draggable').forEach(el => {
      el.addEventListener('dragstart', e => {
        if (el.getAttribute('draggable') === 'false') {
          e.preventDefault();
          return;
        }
        e.dataTransfer.setData('text/plain', e.target.id);
      });
    });
    document.querySelectorAll('.dropzone').forEach(zone => {
      zone.addEventListener('dragover', e => e.preventDefault());
      zone.addEventListener('drop', function(e) {
        e.preventDefault();
        const id = e.dataTransfer.getData('text/plain');
        if (correct[this.id] === id && !matched[id]) {
          this.innerHTML = '';
          this.appendChild(document.getElementById(id));
          document.getElementById(id).setAttribute('draggable', 'false');
          matched[id] = true;
          score += 5;
          updateScore();
          this.classList.add('correct');
          setTimeout(() => {
            this.classList.remove('correct');
          }, 1200);
          checkWin();
        } else if (matched[id]) {
          document.getElementById('result').textContent = 'Already matched!';
          setTimeout(() => { document.getElementById('result').textContent = ''; }, 1000);
        } else {
          this.style.borderColor = 'red';
          document.getElementById('result').textContent = 'Wrong! Try again!';
          setTimeout(() => {
            this.style.borderColor = '#aaa';
            document.getElementById('result').textContent = '';
          }, 1200);
        }
      });
    });
    function checkWin() {
      if (
        matched['circle'] &&
        matched['square'] &&
        matched['triangle'] &&
        matched['star'] &&
        matched['heart']
      ) {
        document.getElementById('result').textContent = 'Great job! ꉂ(˵˃ ᗜ ˂˵) You got 25 points!';
        // Disable all remaining draggables
        document.querySelectorAll('.draggable').forEach(el => {
          el.setAttribute('draggable', 'false');
        });
      }
    }
  </script>
</body>
</html>
